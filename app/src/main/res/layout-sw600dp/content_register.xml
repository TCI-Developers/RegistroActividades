<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".register"
    tools:showIn="@layout/activity_register">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <ProgressBar
                android:id="@+id/progSubida"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txtProgress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textAlignment="center"
                android:textSize="10sp"
                android:visibility="gone" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/txtHuerta"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/boxtext1"
                                android:hint="@string/huerta"
                                android:inputType="textCapSentences"
                                android:paddingLeft="8dp"
                                android:textSize="12sp" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/txtHUE"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/boxtext1"
                                android:hint="HUE"
                                android:inputType="textCapSentences"
                                android:paddingLeft="8dp"
                                android:textSize="12sp" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/txtProductor"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/boxtext1"
                                android:hint="@string/productor"
                                android:inputType="textCapSentences"
                                android:paddingLeft="8dp"
                                android:textSize="12sp" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/txtToneladas"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/boxtext1"
                                android:hint="@string/toneladas_aprox"
                                android:inputType="numberDecimal"
                                android:paddingLeft="8dp"
                                android:textSize="12sp" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/txtContacto"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/boxtext1"
                                android:hint="@string/contacto"
                                android:inputType="textCapSentences"
                                android:paddingLeft="8dp"
                                android:textSize="12sp" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/txtTelefonoContacto"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/boxtext1"
                                android:hint="@string/telefono_contacto"
                                android:inputType="number"
                                android:paddingLeft="8dp"
                                android:textSize="12sp" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/txtTelefono"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/boxtext1"
                                android:hint="@string/tel_fono"
                                android:inputType="number"
                                android:paddingLeft="8dp"
                                android:textSize="12sp" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/txtSuperficie"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/boxtext1"
                                android:hint="@string/superficie"
                                android:inputType="numberDecimal"
                                android:paddingLeft="8dp"
                                android:textSize="12sp" />
                        </android.support.design.widget.TextInputLayout>

                        <Spinner
                            android:id="@+id/spnMunicipio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:entries="@array/municipios"
                            android:popupBackground="@color/colorPrimary" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Comedor" />

                        <Spinner
                            android:id="@+id/spnComedor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_weight="1"
                            android:entries="@array/comedor"
                            android:popupBackground="@color/colorPrimary" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="8dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <CheckBox
                                android:id="@+id/checkBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:clickable="true"
                                android:focusable="auto"
                                android:text="@string/ba_o" />

                            <EditText
                                android:id="@+id/txtDanoBano"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="3dp"
                                android:layout_weight="1"
                                android:background="@drawable/boxtext1"
                                android:hint="@string/ba_o"
                                android:inputType="number"
                                android:maxWidth="110dp"
                                android:maxLength="3"
                                android:paddingLeft="8dp"
                                android:textSize="12sp"
                                android:visibility="invisible" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/textView11"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_weight="1"
                            android:text="Tipo Huerta" />

                        <Spinner
                            android:id="@+id/spnTipo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_weight="1"
                            android:entries="@array/tipoBanda"
                            android:popupBackground="@color/colorPrimary" />

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_weight="1"
                            android:text="Floración" />

                        <Spinner
                            android:id="@+id/spnFloracion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_weight="1"
                            android:entries="@array/floracion"
                            android:popupBackground="@color/colorPrimary" />

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>


            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="@string/calibres"
                android:textColor="#6DBEF3"
                android:textIsSelectable="false" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/txtCal32"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:layout_weight="1"
                            android:autofillHints=""
                            android:background="@drawable/boxtext1"
                            android:ems="10"
                            android:hint="@string/_32"
                            android:inputType="number"
                            android:maxWidth="110dp"
                            android:maxLength="3"
                            android:paddingLeft="8dp"
                            android:textSize="12sp" />

                        <EditText
                            android:id="@+id/txtCal36"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:layout_weight="1"
                            android:background="@drawable/boxtext1"
                            android:ems="10"
                            android:hint="@string/_36"
                            android:inputType="number"
                            android:maxWidth="110dp"
                            android:maxLength="3"
                            android:paddingLeft="8dp"
                            android:textSize="12sp" />

                        <EditText
                            android:id="@+id/txtCal40"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:layout_weight="1"
                            android:background="@drawable/boxtext1"
                            android:ems="10"
                            android:hint="@string/_40"
                            android:inputType="number"
                            android:maxWidth="110dp"
                            android:maxLength="3"
                            android:paddingLeft="8dp"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/txtCal48"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:layout_weight="1"
                            android:background="@drawable/boxtext1"
                            android:ems="10"
                            android:hint="@string/_48"
                            android:inputType="number"
                            android:maxWidth="110dp"
                            android:maxLength="3"
                            android:paddingLeft="8dp"
                            android:textSize="12sp" />

                        <EditText
                            android:id="@+id/txtCal60"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:layout_weight="1"
                            android:background="@drawable/boxtext1"
                            android:ems="10"
                            android:hint="@string/_60"
                            android:inputType="number"
                            android:maxWidth="110dp"
                            android:maxLength="3"
                            android:paddingLeft="8dp"
                            android:textSize="12sp" />

                        <EditText
                            android:id="@+id/txtCal70"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:layout_weight="1"
                            android:background="@drawable/boxtext1"
                            android:ems="10"
                            android:hint="@string/_70"
                            android:inputType="number"
                            android:maxWidth="110dp"
                            android:maxLength="3"
                            android:paddingLeft="8dp"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/txtCal84"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:layout_weight="1"
                            android:background="@drawable/boxtext1"
                            android:ems="10"
                            android:hint="@string/_84"
                            android:inputType="number"
                            android:maxWidth="110dp"
                            android:maxLength="3"
                            android:paddingLeft="8dp"
                            android:textSize="12sp" />

                        <EditText
                            android:id="@+id/txtCal96"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:layout_weight="1"
                            android:background="@drawable/boxtext1"
                            android:ems="10"
                            android:hint="@string/_96"
                            android:inputType="number"
                            android:maxWidth="110dp"
                            android:maxLength="3"
                            android:paddingLeft="8dp"
                            android:textSize="12sp" />

                        <EditText
                            android:id="@+id/txtCalCAN"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:layout_weight="1"
                            android:background="@drawable/boxtext1"
                            android:ems="10"
                            android:hint="@string/can"
                            android:inputType="number"
                            android:maxWidth="110dp"
                            android:maxLength="3"
                            android:paddingLeft="8dp"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/txtCalLAC"
                            android:layout_width="105dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:background="@drawable/boxtext1"
                            android:ems="10"
                            android:hint="@string/lac"
                            android:inputType="number"
                            android:maxLength="3"
                            android:paddingLeft="8dp"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <LinearLayout
                android:id="@+id/layout_danos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:text="@string/da_os_de_la_fruta"
                    android:textColor="#6DBEF3" />

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#fff"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/txtDanoRona"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="3dp"
                                android:layout_weight="1"
                                android:background="@drawable/boxtext1"
                                android:ems="10"
                                android:hint="@string/ro_a"
                                android:inputType="number"
                                android:maxWidth="110dp"
                                android:maxLength="3"
                                android:paddingLeft="8dp"
                                android:textSize="12sp" />

                            <EditText
                                android:id="@+id/txtDanoRosado"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="3dp"
                                android:layout_weight="1"
                                android:background="@drawable/boxtext1"
                                android:ems="10"
                                android:hint="@string/rosado"
                                android:inputType="number"
                                android:maxWidth="110dp"
                                android:maxLength="3"
                                android:paddingLeft="8dp"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/txtDanoTrips"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="3dp"
                                android:layout_weight="1"
                                android:background="@drawable/boxtext1"
                                android:ems="10"
                                android:hint="@string/trips"
                                android:inputType="number"
                                android:maxWidth="110dp"
                                android:maxLength="3"
                                android:paddingLeft="8dp"
                                android:textSize="12sp" />

                            <EditText
                                android:id="@+id/txtDanoQuemado"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="3dp"
                                android:layout_weight="1"
                                android:background="@drawable/boxtext1"
                                android:ems="10"
                                android:hint="@string/quemado"
                                android:inputType="number"
                                android:maxWidth="110dp"
                                android:maxLength="3"
                                android:paddingLeft="8dp"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/txtDanoViruela"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="3dp"
                                android:layout_weight="1"
                                android:background="@drawable/boxtext1"
                                android:ems="10"
                                android:hint="@string/viruela"
                                android:inputType="number"
                                android:maxWidth="110dp"
                                android:maxLength="3"
                                android:paddingLeft="8dp"
                                android:textSize="12sp" />

                            <EditText
                                android:id="@+id/txtDanoVaricela"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="3dp"
                                android:layout_weight="1"
                                android:background="@drawable/boxtext1"
                                android:ems="10"
                                android:hint="@string/varicela"
                                android:inputType="number"
                                android:maxWidth="110dp"
                                android:maxLength="3"
                                android:paddingLeft="8dp"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="8dp"
                                android:layout_weight="2"
                                android:text="Nº CUADRILLAS"
                                android:textColor="#6DBEF3"
                                android:textSize="12sp" />

                            <EditText
                                android:id="@+id/txtNoCuadrillas"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginRight="8dp"
                                android:layout_marginBottom="8dp"
                                android:layout_weight="1"
                                android:background="@drawable/boxtext1"
                                android:ems="10"
                                android:inputType="number"
                                android:paddingLeft="8dp"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <Spinner
                                android:id="@+id/spnPLAG"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="8dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginRight="8dp"
                                android:layout_marginBottom="8dp"
                                android:layout_weight="1"
                                android:entries="@array/bitacora"
                                android:popupBackground="@color/colorPrimary"
                                android:visibility="gone" />

                            <EditText
                                android:id="@+id/txtConcepto"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="8dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginRight="8dp"
                                android:layout_marginBottom="8dp"
                                android:layout_weight="1"
                                android:background="@drawable/boxtext1"
                                android:ems="10"
                                android:hint="Notas"
                                android:inputType="textCapSentences"
                                android:paddingLeft="8dp" />
                        </LinearLayout>

                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lyPhoto"
                android:layout_width="match_parent"
                android:layout_height="228dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgPhoto"
                    android:layout_width="match_parent"
